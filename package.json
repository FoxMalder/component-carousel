{
  "name": "@apatheticwes/flexicarousel",
  "author": "wes hatch",
  "license": "MIT",
  "version": "0.5.0",
  "description": "A micro, responsive, touch-enabled carousel.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/apathetic/flexicarousel.git"
  },
  "keywords": [
    "carousel"
  ],
  "scripts": {
    "start": "http-server ./ -p 8080 -d",
    "clean": "rm dist/*.js",
    "build": "npm run build:js && npm run build:cjs",
    "build:js": "browserify src/shim.js -t babelify | uglifyjs > dist/flexicarousel.min.js",
    "build:cjs": "babel src/flexicarousel.es6.js > dist/flexicarousel.cjs.js",
    "lint": "eslint source/js/*.js",
    "test": "tape -r babel-register test/*.js"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^3.1.1",
    "http-server": "^0.9.0",
    "tape": "^4.6.0",
    "uglify-js": "^2.7.0"
  }
}
